  <script type="text/javascript" src="../../../source/js/core/oocore.js"></script>
  <script type="text/javascript" src="../../../source/js/core/ootouch.js"></script>
  <script type="text/javascript" src="../../../source/js/core/oogesture.js"></script>  

  <style>

    html, body {
      height: 100%;
      width: 100%;
    }

    div {
      height: 40%;
      width: 80%;
      border: 1px solid black;
      margin-bottom: 20px;
    }

    #result-area {
      overflow: auto;
    }

  </style>

  </head>

  <body>

    <div id="gesture-area"></div>
    <div id="result-area"></div>

    <script>
      window.addEventListener('load', function () {
        var d = document,
            listener = function (e) {
              d.querySelector('#result-area').innerHTML = e.type + '<br />' + d.querySelector('#result-area').innerHTML;
            };

        d.querySelector('#gesture-area').addEventListener('swipeLeft', listener);
        d.querySelector('#gesture-area').addEventListener('swipeRight', listener);
        d.querySelector('#gesture-area').addEventListener('tap', listener);
        d.querySelector('#gesture-area').addEventListener('doubleTap', listener);
      });
    </script>

  </body>
  </html>